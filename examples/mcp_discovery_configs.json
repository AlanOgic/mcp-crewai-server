  "discovery_strategies": {
    "personality_based_discovery": {
      "description": "Connect agents to servers based on their personality traits",
      "mapping": {
        "analytical": ["postgres_mcp", "excel_mcp", "analytics_mcp", "tableau_mcp"],
        "creative": ["canva_mcp", "figma_mcp", "adobe_mcp", "unsplash_mcp"],
        "collaborative": ["slack_mcp", "notion_mcp", "intercom_mcp", "github_mcp"],
        "executor": ["docker_mcp", "aws_mcp", "automation_mcp", "deployment_mcp"],
        "innovator": ["kaggle_mcp", "jupyter_mcp", "experimental_mcp", "ai_mcp"]
      }
    },
    
    "role_based_discovery": {
      "description": "Connect agents to servers based on their assigned roles",
      "mapping": {
        "Content Strategist": ["notion_mcp", "analytics_mcp", "social_media_mcp"],
        "Creative Writer": ["google_drive_mcp", "canva_mcp", "unsplash_mcp"],
        "Data Analyst": ["postgres_mcp", "jupyter_mcp", "tableau_mcp", "excel_mcp"],
        "Project Manager": ["slack_mcp", "notion_mcp", "github_mcp", "calendar_mcp"],
        "DevOps Engineer": ["docker_mcp", "aws_mcp", "github_mcp", "monitoring_mcp"],
        "Customer Support": ["zendesk_mcp", "intercom_mcp", "salesforce_mcp", "twilio_mcp"]
      }
    },
    
    "progressive_discovery": {
      "description": "Gradually introduce agents to new MCP servers based on experience",
      "phases": {
        "phase_1_basics": {
          "description": "Essential tools for new agents",
          "servers": ["slack_mcp", "google_drive_mcp", "github_mcp"],
          "trigger": "agent_creation"
        },
        "phase_2_specialization": {
          "description": "Role-specific tools after initial experience",
          "servers": "role_based_mapping",
          "trigger": "after_5_successful_tasks"
        },
        "phase_3_advanced": {
          "description": "Advanced tools for experienced agents",
          "servers": ["aws_mcp", "ai_mcp", "automation_mcp"],
          "trigger": "after_2_weeks_active"
        },
        "phase_4_experimental": {
          "description": "Cutting-edge tools for evolved agents",
          "servers": ["experimental_mcp", "quantum_mcp", "neural_mcp"],
          "trigger": "after_evolution_cycles > 3"
        }
      }
    }
  },
  
  "auto_discovery_rules": {
    "team_completion": {
      "description": "Automatically discover tools when team gaps are identified",
      "rules": [
        {
          "condition": "missing_design_capabilities",
          "action": "connect_to_design_servers",
          "servers": ["figma_mcp", "canva_mcp", "adobe_mcp"]
        },
        {
          "condition": "poor_data_analysis_performance", 
          "action": "connect_to_analytics_servers",
          "servers": ["postgres_mcp", "tableau_mcp", "analytics_mcp"]
        },
        {
          "condition": "communication_gaps_detected",
          "action": "connect_to_communication_servers", 
          "servers": ["slack_mcp", "email_mcp", "calendar_mcp"]
        }
      ]
    },
    
    "performance_optimization": {
      "description": "Connect to performance-enhancing tools based on metrics",
      "rules": [
        {
          "condition": "task_completion_time > threshold",
          "action": "connect_to_automation_servers",
          "servers": ["automation_mcp", "workflow_mcp", "efficiency_mcp"]
        },
        {
          "condition": "collaboration_score < 0.6",
          "action": "connect_to_collaboration_servers",
          "servers": ["notion_mcp", "slack_mcp", "meeting_mcp"]
        },
        {
          "condition": "creative_output_quality_declining",
          "action": "connect_to_inspiration_servers",
          "servers": ["unsplash_mcp", "inspiration_mcp", "trends_mcp"]
        }
      ]
    }
  }
}